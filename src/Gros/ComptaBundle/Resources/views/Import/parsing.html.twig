{% extends "GrosComptaBundle::layout.html.twig" %}

{% block title %}
    Data Import - {{ parent() }}
{% endblock %}

{% block sub_title %}
    Data Import
{% endblock %}

{% block header_javascripts %}
{{ parent() }}
<script type="text/javascript">
</script>
{% endblock %}

{% block sidebar %}
{{ parent() }}
{% endblock %}


{% block groscompta_body %}
<div class="row">
    <div class="span9">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Label</th>
                    <th>Amount</th>
                </tr>
            </thead>
            <tbody>
            {% for row in parsed_lines %}
                <tr>
                    <td>{{ row.date }}</td>
                    <td>{{ row.label }}</td>
                    <td>{{ row.amount }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <p>{{ lines_count }} rows waiting to be imported.</p>
    </div>
</div>
{% endblock %}

{% block body_javascripts %}
{{ parent() }}
{% endblock %}
