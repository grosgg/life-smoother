{% extends "GrosComptaBundle::layout.html.twig" %}

{% block title %}
    Category {{ entity.id }} - {{ parent() }}
{% endblock %}

{% block sub_title %}
    Category {{ entity.id }}
{% endblock %}

{% block groscompta_body %}

<table class="table table-striped">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ entity.name }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ entity.description }}</td>
        </tr>
    </tbody>
</table>

<ul class="unstyled">
    <li style="float:left; margin-right:10px">
        <a class="btn" href="{{ path('category') }}">
            Back to the list
        </a>
    </li>
    <li style="float:left; margin-right:10px">
        <a class="btn btn-warning" href="{{ path('category_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li style="float:right">
        <form action="{{ path('category_delete', { 'id': entity.id }) }}" method="post" >
            {{ form_widget(delete_form) }}
            <button class="btn btn-danger" type="submit">Delete</button>
        </form>
    </li>
</ul>

{% endblock %}
