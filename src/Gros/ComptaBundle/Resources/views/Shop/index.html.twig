
{% extends "GrosComptaBundle::layoutcompta.html.twig" %}

{% block title %}
    Shops - {{ parent() }}
{% endblock %}

{% block sub_title %}
    Shops
{% endblock %}

{% block groscompta_body %}

{% if entities is empty %}
<div class="well">
    No Shop has been saved yet.<br/>
    Make sure you have at least one Category created before adding Parsing Rules.
</div>
{% else %}
<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td>{{ entity.name }}</td>
            <td>{{ entity.description }}</td>
            <td>
                <a class="btn btn-warning" href="{{ path('shop_edit', { 'id': entity.id }) }}">edit</a>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% endif %}

<div class="row">
    <div class="span6">
        {% include 'GrosComptaBundle::pagination.html.twig' with paginator %}
    </div>
    <div class="span3">
        <a class="btn btn-primary btn-new-entry pull-right" href="{{ path('shop_create') }}">
            Create a new entry
        </a>
    </div>
</div>

{% endblock %}
