{% extends "GrosComptaBundle::layout.html.twig" %}

{% block title %}
    New Shop - {{ parent() }}
{% endblock %}

{% block sub_title %}
    New Shop
{% endblock %}

{% form_theme form with 'GrosComptaBundle:Default:fields.html.twig' %}

{% block groscompta_body %}

<form class="form-horizontal" action="{{ path('shop_create') }}" method="post" {{ form_enctype(form) }}>
    {{ form_widget(form) }}

    <p>
        <button class="btn btn-primary" type="submit">Create</button>
        <a class="btn" href="{{ path('shop') }}">Back to the list</a>
    </p>
</form>

{% endblock %}
