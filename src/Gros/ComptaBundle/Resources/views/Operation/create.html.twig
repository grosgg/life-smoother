{% extends "GrosComptaBundle::layout.html.twig" %}

{% block title %}
    New Operation - {{ parent() }}
{% endblock %}

{% block sub_title %}
    New Operation
{% endblock %}

{% form_theme form with 'GrosComptaBundle:Default:fields.html.twig' %}

{% block groscompta_body %}
<form class="form-horizontal" action="{{ path('operation_create') }}" method="post" {{ form_enctype(form) }}>
<div class="control-group">
    <label class="control-label" >{{ form_label(form.amount)}}</label>
    <div class="controls">
        <div class="input-append">
            <input type="text" class="input-small" name="{{ form.amount.vars.full_name }}" id="{{ form.amount.vars.id }}"><span class="add-on">â‚¬</span>
            {{ form_errors(form.amount) }}
        </div>
    </div>
</div>

    {{ form_row(form.type) }}
    {{ form_row(form.shop) }}
    {{ form_row(form.category) }}
    {{ form_row(form.date) }}
    {{ form_row(form.user) }}
    {{ form_row(form.description) }}
    {{ form_row(form._token) }}

    <p>
        <button class="btn btn-primary" type="submit">Create</button>
        <a class="btn" href="{{ path('operation') }}">Back to the list</a>
    </p>
</form>

{% endblock %}
