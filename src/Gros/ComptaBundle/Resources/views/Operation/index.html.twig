{% extends "GrosComptaBundle::layout.html.twig" %}

{% block title %}
    Operations - {{ parent() }}
{% endblock %}

{% block sub_title %}
    Operations
{% endblock %}

{% block groscompta_body %}

<table class="table table-striped">
    <thead>
        <tr>
            <th>Amount</th>
            <th>Date</th>
            <th>Shop</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td>{% if entity.type == 0 %}-{% else %}+{% endif %}{{ entity.amount }}â‚¬</td>
            <td>{% if entity.date %}{{ entity.date|date('Y-m-d') }}{% endif %}</td>
            <td>{{ entity.shop.name }}</td>
            <td>{{ entity.description }}</td>
            <td>
                <a class="btn" href="{{ path('operation_show', { 'id': entity.id }) }}">show</a>
                {% if entity.canEdit %}
                <a class="btn btn-warning" href="{{ path('operation_edit', { 'id': entity.id }) }}">edit</a>
                {% endif %}
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<a class="btn btn-primary" href="{{ path('operation_create') }}">
    Create a new entry
</a>

{% endblock %}
