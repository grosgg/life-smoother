{% extends "::layout.html.twig" %}

{% block title %}
    ComptaGros - {{ parent() }}
{% endblock %}

{% block header %}
    {% include '::navbar.html.twig' %}
{% endblock %}

{% block body %}
    <div id="menu" class="span3">
        {% block sidebar %}
        <h3>ComptaGros</h3>
        <ul class="nav nav-pills nav-stacked">
            <li><a href="{{ path('operation') }}">Operations</a></li>
            <li><a href="{{ path('shop') }}">Shops</a></li>
            <li><a href="{{ path('category') }}">Categories</a></li>
            <li><a href="{{ path('shopper') }}">Shoppers</a></li>
            <li><a href="{{ path('analytics') }}">Analytics</a></li>
            <li><a href="{{ path('estimations_automatic') }}">Estimations</a></li>
            <li><a href="{{ path('import') }}">Data Import</a></li>
        </ul>
        {% endblock %}
    </div>
    <div id="content" class="span9">
        <h1>{% block sub_title %}{% endblock %}</h1>

        <hr>
        {% if app.session.hasFlash('error') %}
            <div class="alert alert-error"><button type="button" class="close" data-dismiss="alert">&times;</button>{{ app.session.flash('error') }}</div>
        {% endif %}
        {% if app.session.hasFlash('warning') %}
            <div class="alert alert-warning"><button type="button" class="close" data-dismiss="alert">&times;</button>{{ app.session.flash('warning') }}</div>
        {% endif %}
        {% if app.session.hasFlash('success') %}
            <div class="alert alert-success"><button type="button" class="close" data-dismiss="alert">&times;</button>{{ app.session.flash('success') }}</div>
        {% endif %}

        {% block groscompta_body %}
        {% endblock %}
    </div>


{% endblock %}
